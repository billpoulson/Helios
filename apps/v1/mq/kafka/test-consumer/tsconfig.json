{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./typings"
		],
		"types": [],
		"paths": {}
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"typeRoots": [
		"node_modules/@types",
	]
}
